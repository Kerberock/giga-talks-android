<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="PRUEBAS ANDROID - GIGA" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Intents explícitos" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IR AL REGISTRO"
        android:layout_marginTop="20dp"
        android:onClick="lanzar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Intents implícitos" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desplegar URL"
        android:layout_marginTop="20dp"
        android:onClick="abrirWeb" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir localización"
        android:onClick="localizar" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marcar con teléfono"
        android:onClick="marcar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Notificación" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lanzar notificación"
        android:onClick="lanzar_notificacion" />

</LinearLayout>